{
    "description": "The mediacontroller interface contains actions to control media streams.",
    "extends": "media",
    "states": [
        {
            "name": "shuffle",
            "type": "bool",
            "writable": true,
            "optional": true
        },
        {
            "name": "repeat",
            "type": "QString",
            "allowedValues": ["None", "One", "All"],
            "writable": true,
            "optional": true
        },
        {
            "name": "like",
            "type": "bool",
            "writable": true,
            "optional": true
        }
    ],
    "actions": [
        {
            "name": "skipBack"
        },
        {
            "name": "stop"
        },
        {
            "name": "play"
        },
        {
            "name": "pause"
        },
        {
            "name": "skipNext"
        },
        {
            "name": "fastForward",
            "optional": true
        },
        {
            "name": "fastRewind",
            "optional": true
        }
    ]
}
